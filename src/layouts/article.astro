---
import MainHead from '../components/MainHead.astro'
import Footer from '../components/Footer.astro'
import Nav from '../components/Nav.svelte'
import ArticleEmblems from '../components/ArticleEmblems.svelte'

import moment from 'moment'

const { content } = Astro.props;
---

<html lang={content.lang || 'en'}>
	<head>
		<MainHead title={content.title} description={content.description} keywords={content.tags}/>
		<style>
			.hero {
				padding: 8rem;
				display: flex;
				background-color: var(--t-bg);
				background-repeat: no-repeat;
				background-size: cover;
				min-height: 25vw;
				color: var(--c-white);
				flex-direction: column;
				align-items: center;
				justify-content: center;
			}

			.title {
				font-size: var(--f-u10);
				font-weight: 900;
				text-transform: uppercase;
				letter-spacing: 0.0625em;
			}

			.content {
				font-size: var(--f-u1);
				line-height: 2.2;
				max-width: 50em;
				margin: auto;
			}

			footer {
				text-align: center;
				margin-top: 3rem;
			}
		</style>
	</head>
	<body>
		<Nav />
		<header style={`background-image:url("${content.img}")`} class="hero">
			<h1 class="title">{content.title}</h1>
		</header>
		<ArticleEmblems client:load publishDate={content.publishDate} description={content.description} tags={content.tags}/>
		<div class="wrapper">
			<div class="content"><slot /></div>
		</div>
		<footer>
			<a href="/blog" class="button">More articles</a>
		</footer>
		<Footer />
	</body>
</html>
